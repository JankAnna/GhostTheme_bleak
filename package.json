{
  "name": "bleak",
  "description": "GhostTheme_bleak to zmodyfikowana wersja minimalistycznego i responsywnego motywu Bleak dla platformy Ghost CMS. Zawiera poprawki błędów, aktualizacje CSS oraz dostosowania do najnowszej wersji platformy. Idealne rozwiązanie dla użytkowników szukających prostego, eleganckiego motywu blogowego, kładącego nacisk na czytelność i łatwość użytkowania.",
  "version": "1.6.1",
  "engines": {
    "ghost": ">=3.0.0",
    "ghost-api": "v3"
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "src/screenshot-desktop.jpg",
    "mobile": "src/screenshot-mobile.jpg"
  },
  "author": {
    "name": "Anna Zofia Jankowska",
    "email": "cyber@janna.pl",
    "url": "https://janna.pl"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Magazine"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JankAnna/GhostTheme_bleak.git"
  },
  "bugs": {
    "url": "https://github.com/JankAnna/GhostTheme_bleak/issues"
  },
  
  "devDependencies": {
    "autoprefixer-core": "^6.0.1",
    "grunt": "^1.0.1",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^2.2.1",
    "grunt-contrib-uglify": "^3.3.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-postcss": "^0.9.0",
    "grunt-sass": "^2.1.0",
    "load-grunt-tasks": "^3.5.2"
  },
  "config": {
